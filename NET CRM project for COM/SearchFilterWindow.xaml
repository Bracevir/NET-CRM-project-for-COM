<Window x:Class="CRMproject.SearchFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поиск" Height="290" Width="300">
    <StackPanel Margin="10">
        <Label Content="Файл:" />
        <TextBox Name="FileNameTextBox"/>

        <Label Content="Материал:" />
        <TextBox Name="MaterialTextBox"/>

        <Label Content="Модель:" />
        <TextBox Name="EquipmentTextBox"/>

        <Label Content="Стоимость:" />
        <TextBox Name="CostTextBox"/>

        <Button Content="Применить фильтры" Click="ApplyFiltersButton_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
